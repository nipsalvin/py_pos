<FlatButton@ButtonBehavior+Label>:
    font_size: 14

<OperatorWindow>:
    id: main_win
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        id: header
        size_hint_x: None
        heght: 40
        canvas.before:
            Color:
                rgba: (.06,.45,.45,1)
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: "P.O.S by @Nips"
            size_hint_x: .9
            bold: True
            color(1,1,1,1)
        FlatButton:
            id: loggedin_user
            text: 'jdoe'
            color: (1,1,1,1)
    BoxLayout:
        id:current
        Button:
            text:'Current Item'
            background_normal:''
            background_color:(.06,.32,.32,1)
        Button:
            id: cur_product
            text: 'Default Product'
            background_normal:''
            background_color:(.06,.65,.65,1)
        Button:
            id: cur_price
            text: '0.00'
